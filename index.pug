     .info
      label(for="name") 姓名
      input#name(type="text", name="name", placeholder="六角講師")
      label(for="tel") 電話
      input#tel(type="tel", name="tel", placeholder="0987654321")
      label(for="email") 信箱
      input#email(type="email", name="email", placeholder="example@hexschool.com")
     .remark 
      label(for="remark_content") 備註
      textarea#remark_content(name="remark_content") 
    button.btn(type="submit") 送出 
